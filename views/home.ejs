<head>
  <!-- CSS only -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
    integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/css/home.css" />
</head>

<body>
  <div class="container">
    <form action="/create-task" method="POST">
      <h1>TODO LIST</h1>
      <div class="des">
        <h3>Description</h3>
        <input
          type="text"
          class="no-outline"
          placeholder="What do you need to do?"
          name="description"
        />
      </div>
      <div class="row cat">
        <div class="col">
          <h3>Category</h3>
          <select
            class="form-select"
            aria-label="Default select example"
            name="catogery"
          >
            <option selected>Choose a catogery</option>
            <option value="Personal">Personal</option>
            <option value="Work">Work</option>
            <option value="School">School</option>
            <option value="Cleaning">Cleaning</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="col date">
          <h3>Due Date</h3>
          <input type="date" class="no-outline" name="date" />
        </div>
      </div>
      <div class="row btnn">
        <div class="col add">
          <a href="/delete-task">
            <button class="btn btn-success">
              <i class="fas fa-plus"></i> ADD TASK
            </button>
          </a>
        </div>
        <div class="col del">
          <button class="btn btn-danger" type="submit">
            <i class="fas fa-trash-alt"></i> DELETE TASK
          </button>
        </div>
      </div>
    </form>
    <section>
      <form action="">
        <% for(let task of tasklist){%>
        <div class="row">
          <div class="col-1">
            <input
              type="checkbox"
              class="checkbox"
              name="checkbox"
              id="<%=task.id%>"
            />
          </div>
          <div class="col-9">
            <label for="checkbox" class="checkbox_label">
              <% if((task.description).length==0){ %> No Description <%}else{%>
              <%=task.description%> <%}%>
            </label>
            <div class="row">
              <div class="col-1">
                <i class="fas fa-calendar-alt"></i>
              </div>
              <div class="col">
                <p class="task_date">
                  <% if((task.date).length==0){ %> No Due Date <%}else{%>
                  <%=task.date%> <%}%>
                </p>
              </div>
            </div>
          </div>
          <div class="col-2">
            <% if(task.catogery!="Choose a catogery"){%>
            <div class="catogery"><%=task.catogery%></div>
            <%} %>
          </div>
        </div>

        <%}%>
      </form>
    </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
